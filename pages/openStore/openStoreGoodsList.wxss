/* pages/openStore/openStoreGoodsList.wxss */

page {
  width: 100%;
  height: 100%;
}

.store-container {
  width: 100%;
  height: 100%;
  padding-top: 170rpx;
  background-size: cover;
}

.goods_container {
  padding-top: 8rpx;
  margin-left: 14rpx;
  padding-bottom: 20rpx;
  border-radius: 5rpx;
  margin-right: 14rpx;
  align-items: center;
  padding-left: 11rpx;
  padding-right: 11rpx;
  align-content: center;
  position: absolute;
  background: -webkit-linear-gradient(top, #f7dfb5, #ffc57d, #fee1bd);
}

.gridview-item {
  border-radius: 10rxp;
  margin-left: 9rpx;
  margin-right: 9rpx;
  margin-top: 18rpx;
  width: 332rpx;
  float: left;
  display: flex;
  padding-top: 20rpx;
  padding-bottom: 23rpx;
  flex-direction: column;
  background: white;
}

.goods-img {
  margin-left: 22rpx;
  width: 288rpx;
  height: 288rpx;
}

.ellipsis-2lines {
  margin-top: 15rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  margin-left: 22rpx;
  margin-right: 22rpx;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  font-size: 26rpx;
  color: #221815;
  -webkit-box-orient: vertical;
}

.buttom-price {
  margin-top: 15rpx;
  margin-left: 22rpx;
}

.price {
  font-size: 24rpx;
  color: #a40000;
}

.price-text {
  font-size: 34rpx;
  color: #a40000;
}

.buy-now {
  margin-right: 25rpx;
  float: right;
  font-size: 22rpx;
  color: white;
}

button::after {
  border: none;
}

button {
  display: inline-block;
  border-radius: 30px;
  background: #a40000;
}
